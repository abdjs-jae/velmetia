<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg"
    tools:context="app.rocketship.velmetia.slides.Velmetia2Fragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_velmetia2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent = "15%"
        app:layout_marginTopPercent = "60%"
        >
        <Button
            android:id="@+id/mid_heart"
            app:layout_widthPercent = "10%"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/left_heart"
            app:layout_widthPercent = "10%"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/mid_heart"
            app:layout_marginRightPercent= "15%"
            android:background="#00ffffff"
            />

        <Button
            android:id="@+id/right_kidney"
            app:layout_widthPercent = "10%"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/mid_heart"
            app:layout_marginLeftPercent= "15%"
            android:background="#00ffffff"
            />
    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentFrameLayout>
